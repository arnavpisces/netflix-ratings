{
  "manifest_version": 3,
  "name": "Netflix Rotten Tomatoes Ratings",
  "version": "1.0",
  "description": "Shows Rotten Tomatoes critics and audience ratings on Netflix titles",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.netflix.com/*",
    "https://www.rottentomatoes.com/*",
    "https://api.rottentomatoes.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Netflix Show Blacklist"
  },
  "web_accessible_resources": [
    {
      "resources": ["*.png", "*.svg"],
      "matches": ["https://www.netflix.com/*"]
    }
  ]
}